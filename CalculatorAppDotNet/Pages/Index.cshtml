@page
@model CalculatorApp.Pages.IndexModel
@{
    ViewData["Title"] = "Calculator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body onload="initCalculator()">
    <div class="calculator">
        <input type="text" id="display" disabled />

        <div class="buttons">
            <button onclick="memoryAdd()">M+</button>
            <button onclick="memorySubtract()">M-</button>
            <button onclick="memoryClear()">MRC</button>
            <button class="span-two-column invisible-button"></button>

            <button onclick="appendNumber('7')">7</button>
            <button onclick="appendNumber('8')">8</button>
            <button onclick="appendNumber('9')">9</button>
            <button onclick="clearDisplay()">C</button>
            <button onclick="clearAll()">AC</button>

            <button onclick="appendNumber('4')">4</button>
            <button onclick="appendNumber('5')">5</button>
            <button onclick="appendNumber('6')">6</button>
            <button onclick="appendOperation('*')">ร</button>
            <button onclick="appendOperation('/')">รท</button>

            <button onclick="appendNumber('1')">1</button>
            <button onclick="appendNumber('2')">2</button>
            <button onclick="appendNumber('3')">3</button>
            <button onclick="appendOperation('+')" class="span-two-row">+</button>
            <button onclick="appendOperation('-')">-</button>

            <button onclick="appendNumber('0')">0</button>
            <button onclick="appendNumber('00')">00</button>

            <button onclick="appendOperation('.')">.</button>
            <button onclick="calculateResult()">=</button>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>